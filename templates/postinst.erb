#!/bin/sh
# postinst script for omg-cashier
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
		PROJECT=<%= @project %>
    if ! getent passwd cpc-system > /dev/null 2>&1 ; then
        useradd -U -M -d /opt/cpc/ cpc-system > /dev/null 2>&1 
    fi
    if ! getent group cpc-system > /dev/null 2>&1 ; then
        addgroup --system --quiet cpc-system
    fi

    if [ ! -d /opt/cpc/$PROJECT/tmp ]; then  mkdir /opt/cpc/$PROJECT/tmp; fi
    if [ ! -d /opt/cpc/$PROJECT/log ]; then  mkdir /opt/cpc/$PROJECT/log; fi
    if [ ! -d /opt/cpc/$PROJECT/etc ]; then /bin/mkdir -p /opt/cpc/$PROJECT/etc; fi
    if [ -f /opt/cpc/$PROJECT/app/config/database.yml.example ]; then /bin/mv /opt/cpc/$PROJECT/app/config/database.yml.example /opt/cpc/etc/database.yml.example; fi
    if [ -f /opt/cpc/$PROJECT/app/config/service_config.yml.sample ]; then /bin/mv /opt/cpc/$PROJECT/app/config/service_config.yml.sample /opt/cpc/$PROJECT/etc/service_config.yml.sample; fi
    if [ -f /opt/cpc/$PROJECT/app/config/sms_activation_service_config.rb.sample ]; then /bin/mv /opt/cpc/$PROJECT/app/config/initializers/sms_activation_service_config.rb.sample /opt/cpc/$PROJECT/etc/sms_activation_service_config.rb.sample;fi
  
    chown -R cpc-system:cpc-system /opt/cpc/
    if [ $PROJECT="cashier" ]; then /etc/init.d/memcached start; fi 
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
